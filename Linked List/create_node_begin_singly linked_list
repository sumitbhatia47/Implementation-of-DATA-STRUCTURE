#include <iostream>
using namespace std;

void begin_inerst();
void crea_node();
void prin_node();
void end_node();
struct node
{
    int data;
    struct node *next;
}*head;


void crea_node()
{
    char choice; int data1;
    struct node *temp;
    do
    {
        struct node *newnode=(struct node*)malloc(sizeof(struct node *));
        std::cout << "Enter the data :" << std::endl; std::cin >> data1;
        newnode->data=data1;
        newnode->next=NULL;
        if(head==NULL)
        {
          head=newnode;
          temp=newnode;
        }
        else
        {
            temp->next=newnode;
            temp=newnode;
        }
     std::cout << "Do you want to add the node in the list (y/Y) :"  << std::endl;
     std::cin >> choice;
    }while(choice=='y' || choice=='Y');
}

void prin_node()
{
    struct node *temp;
    temp=head;
    if(temp==NULL)
    {
        std::cout << "Node is empty." << std::endl;
    }
    else
    {
        std::cout << "The nodes are given below :" << std::endl;
        while(temp!=NULL)
        {
            std::cout << temp->data << std::endl;
            temp=temp->next;
        }
    }
}

void begin_inerst()
{
    int data2;
    struct node *newnode1=(struct node*)malloc(sizeof(struct node *));
        std::cout << "Enter the data at begining :" << std::endl; 
        std::cin >> data2;
        newnode1->data=data2;
        newnode1->next=head;
        head=newnode1;
}

void end_node()
{
    char choice;
    struct node *temp;
int newdata;
do{
struct node *newnode=(struct node*)malloc(sizeof(struct node*));
cout<<"Enter the data at an ending :" <<endl; cin>>newdata;
newnode->data=newdata;
temp =head;
while(temp->next!=NULL)
{
temp=temp->next;
}
temp->next=newnode;
newnode->next=NULL;
std::cout << "Do you want to add the node at an ending (y/Y) ?" << std::endl;
cin>>choice;
}while(choice=='y' || choice=='Y');
}

int main()
{
    crea_node(); // 5  6
    prin_node(); // 5 6
    end_node();// 2 5 6
    prin_node();
}
